#!/bin/bash

set -e # stops script in case command fails
set -u # stops script on undefined variables

<<DESCRIPTION
 	rio: Load data from stdin into R as a data frame, execute given commands, and get the output as data frame or PNG on stdout

	Example usage:
	curl -s 'https://raw.githubusercontent.com/pydata/pandas/master/pandas/tests/data/iris.csv' > data.txt
	< data.txt Rio -e 'summary(df)'
	< data.txt Rio -se 'sqldf("select Name from df where df.SepalLength > 7")'
	< data.txt Rio -ge 'g+geom_point(aes(x=SepalLength,y=SepalWidth,colour=Name))' > data.png
	
	Dependency: R (with optionally the R packages ggplot2, plyr, and sqldf)

	Author: http://jeroenjanssens.com
DESCRIPTION

function usage() {
cat << EOF

Rio: Load data from stdin into R as a data frame, execute given commands, and get the output as data frame on stdout

usage: $(basename $0) OPTIONS

OPTIONS:
   -d      Delimiter
   -e      Commands to execute
   -h      Show this message
   -g      Import ggplot2
   -n      CSV has no header
   -p      Import plyr
   -s      Import sqldf
   -v      Verbose

EOF
exit 1
}

if [[ "$#" -eq 0 ]]
then
  usage
fi

function callR() {
	Rscript --vanilla -e "df<-read.table('${IN}',header=${HEADER},sep='${DELIMITER}',stringsAsFactors=F);${REQUIRES}${SCRIPT}last<-.Last.value;if(is.data.frame(last)){write.table(last,'${OUT}',sep='\t',quote=F,row.names=F,col.names=${HEADER});}else if(is.vector(last)){cat(last,sep='\n', file='${OUT}')}else if(exists('is.ggplot')&&is.ggplot(last)){ggsave('${OUT}',last,dpi=72);}else{sink('${OUT}');print(last);}"
}

SCRIPT=
REQUIRES=
DELIMITER="\t"
HEADER="T"
VERBOSE=false

# OSX `mktemp' requires a temp file template, but Linux `mktemp' has it as optional.
# This explicitly uses a template, which works for both.  The $TMPDIR is in case
# it isn't set as an enviroment variable, assumes you have /tmp.
if [ -z "$TMPDIR" ]; then
    TMPDIR=/tmp/
fi
IN=$(mktemp ${TMPDIR}Rio-XXXXXXXX)
OUT=$(mktemp ${TMPDIR}Rio-XXXXXXXX).png

while getopts "d:hgnpsve:" OPTION
do
	case $OPTION in
		d)
			DELIMITER=$OPTARG
			;;
		e)
			SCRIPT=$OPTARG
			if ! echo $SCRIPT | grep -qe "; *$"
			then
				SCRIPT="${SCRIPT};"
			fi
			;;
		h)
			usage
			exit 1
			;;
		g)
			REQUIRES="${REQUIRES}require(ggplot2);g<-ggplot(df);"
			;;
		n)
			HEADER="F"
			;;
		p)
			REQUIRES="${REQUIRES}require(plyr);"
			;;
		s)
			REQUIRES="${REQUIRES}require(sqldf);"
			;;
		v)
			VERBOSE=true
			;;
		?)
			usage
			exit
		;;
	esac
done

cat /dev/stdin > $IN
if $VERBOSE
then
	callR
else
	callR >/dev/null 2>&1
fi
cat $OUT
rm $IN $OUT
rm -f Rplots.pdf
